<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="radio">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
    </style>
    <!--设置底部导航按钮属性-->
    <style name="radio.main_tab">
        <item name="android:textColor">@color/main_tab_normal</item>
        <item name="android:drawablePadding">@dimen/space_7</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/main_bg_selector</item>
    </style>
    <!--设置tab1中viewPage导航按钮属性-->
    <style name="radio.tab1_viewPage">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/normal_space</item>
        <item name="android:drawablePadding">@dimen/main_tab_space</item>
        <item name="android:background">@drawable/tab1_bg_selector</item>
        <item name="android:textColor">@color/tab1_viewPage_text</item>
    </style>
    <!--设置tab顶部式样-->
    <style name="tab_top_linearView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">@dimen/space_4</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/tab_top_bg</item>
    </style>
    <style name="tab_top">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/space_4</item>
        <item name="android:background">@drawable/top_btn_selector</item>
    </style>
    <style name="tab_top.img">
        <item name="android:background">@null</item>
    </style>
    <style name="tab_top.text">
        <item name="android:textSize">@dimen/text_size_36</item>
        <item name="android:textColor">@color/tab_top_text</item>
    </style>
    <!--设置tab中ListView的通用linearLayout式样-->
    <style name="tab1_listView_linearLayout_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:shadowColor">@color/gray</item>
    <item name="android:orientation">horizontal</item>
    </style>
    <!--设置tab中ListView的普通字体式样-->
    <style name="tab1_listView_normalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:textColor">@color/tab1_listView_normalText</item>
    </style>
    <!--设置tab3内容式样-->
    <style name="tab3_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_30</item>
        <item name="android:textColor">@color/tab3_item_text</item>
        <item name="android:layout_margin">@dimen/normal_space</item>
    </style>
    <style name="tab3_linearLayout">
        <item name="android:layout_marginTop">@dimen/space_7</item>
        <item name="android:layout_marginBottom">@dimen/space_7</item>
        <item name="android:shadowColor">@color/gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!--设置tab4内容式样-->
    <style name="tab_top.radio">
        <item name="android:textSize">@dimen/text_size_32</item>
        <item name="android:textColor">@color/tab_top_text</item>
        <item name="android:button">@null</item>
    </style>
    <style name="tab4_content">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/space_4</item>
        <item name="android:textColor">@color/tab1_viewPage_text</item>
        <item name="android:textSize">@dimen/text_size_30</item>
    </style>
    <!--设置complain_detail_handle内容式样-->
    <style name="complain_detail_handle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/tab1_viewPage_text</item>
        <item name="android:textSize">@dimen/text_size_28</item>
        <item name="android:paddingLeft">@dimen/space_4</item>
    </style>
    <!--设置complain_detail_listview内容式样-->
    <style name="complain_detail_listView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_28</item>
        <item name="android:padding">@dimen/space_4</item>
    </style>

    <!--设置半透明主题-->
    <style name="Theme.Translucent" parent="android:style/Theme.Translucent">
        <item name="android:colorForeground">#fff</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>